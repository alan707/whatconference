<ol class="breadcrumb">
  <li><%= link_to "All Conferences", conferences_path %></li>
  <li class="active"><%= truncate(conference.title, :length => 60) %></li>
</ol>

<div class="page-header">
  <h3><%= conference.title %></h3>
  <h2 class="dates"><%= conference_dates(conference) %> in <%= conference.city_state %></h2>
  <h2 class="submitter">Location/Venue: <%= conference.location %></h2>
  <h2 class="submitter">Submitted by <%= conference.creation_user.username %></h2>
</div>

<div class="btn-group pull-right">
  <% if policy(conference).edit? -%>
    <%= link_to 'Edit', edit_conference_path(conference), class: "btn btn-default" %>
  <% end %>
  <% if policy(conference).destroy? -%>
    <%= link_to 'Remove', conference, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
  <% end %>
</div>

<div class="btn-toolbar-wide">
  <%= render :partial => "follow_conference", :locals => { :conference => conference } %>
  <%= link_to 'Visit conference website', conference.url, class: "btn btn-primary btn-lg" %>
</div>


<section class="comments-section">
  <h3><%= pluralize(conference.comments.count, "Comment") %></h3>

  <%= render :partial => conference.comments %>

  <%= simple_form_for [conference, Comment.new]  do |f| %>
    <div class="field">
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <br>
    <%= f.submit "Add Comment", class: "btn btn-primary" %>
  <% end %>
</section>
