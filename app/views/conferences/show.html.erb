<div class="page-header">
  <h1><%=link_to conference.title, conference.url %></h1>
  <h2 class="dates"><%= conference_dates(conference) %> in <%= conference.location %></h2>
  <h2 class="submitter">Submitted by <%= conference.user.username %></h2>
</div>

<div class="btn-group">
  <%= link_to 'Visit conference website', conference.url, class: "btn btn-primary" %>
</div>

<div class="btn-group pull-right">
  <%= render :partial => "like_conference", :locals => { :conference => conference } %>
</div>

<% if conference.user == current_user -%>
  <div class="btn-group">
    <%= link_to 'Edit', edit_conference_path(conference), class: "btn btn-default" %>
    <%= link_to 'Remove', conference, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
  </div>
<% end %>

<h3 class="comments_title">
  <%= conference.comments.count %> Comments
</h3>

<div id="comments">
  <%= render :partial => conference.comments %>
</div>
<%= simple_form_for [conference, Comment.new]  do |f| %>
  <div class="field">
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <br>
  <%= f.submit "Add Comment", class: "btn btn-primary" %>
<% end %>
