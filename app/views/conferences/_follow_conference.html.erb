<%= link_to follow_conference_path(conference), method: :post, class: "btn btn-danger btn-lg" do %>
  <i class="what-radar icon-left"></i>
  <% if current_user.conferences.include? conference %>
    On my radar
  <% else %>
    Keep it on my radar!
  <% end %>
  <%= conference.follower_count %>
<% end %>

