<% following = user_signed_in? && current_user.conferences.include?(conference) %>
<%= link_to follow_conference_path(conference), method: :post, class: "btn btn-danger btn-lg btn-radar", :data => { :disable_with => radar_sweep_icon, :title => conference.title, :following => following ? "1" : "0" } do %>
  <span class="btn-text">
    <% if following %>
      On my radar
    <% else %>
      Put it on my radar!
    <% end %>
    <%= content_tag(:span, { :class => "badge" }.deep_merge(tooltip_popup("People who have this conference on their radar"))) do %>
      <%= conference.follower_count %>
    <% end %>
  </span>
<% end %>

