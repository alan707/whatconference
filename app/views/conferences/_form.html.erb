<%= simple_form_for conference do |f| %>
  <%= f.input :title, label: 'Title', placeholder: 'the name of the conference' %>
  <%= f.input :date_range, label: 'Dates', input_html: { value: f.object.date_range_format(self), class: 'daterange' } %>
  <%= f.input :location, label: 'Location/Venue', placeholder: 'where the conference will take place - e.g. Las Vegas, NV or 3600 South Las Vegas Boulevard', input_html: { class: 'location' } %>
  <%= f.hidden_field :city_state %>
  <%= f.hidden_field :latitude %>
  <%= f.hidden_field :longitude %>
  <%= f.input :url, as: 'url', label: 'Conference website', placeholder: 'copy conference url and paste here' %>
  <%= f.button :submit, "Submit", class: "btn btn-lg btn-primary" %>

<% end %>
